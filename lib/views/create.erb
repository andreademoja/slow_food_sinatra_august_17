<form action="/auth/create" method="post">
  <input type="text" name="user[firstname]" placeholder="First name">
  <input type="text" name="user[lastname]" placeholder="Last name">
  <input type="text" name="user[username]" placeholder="Username"/>
  <p></p>
  <input type="password" name="user[password]" placeholder="Password" />
  <input type="password" name="confirm_password" placeholder="Confirm Password" />
  <input type="text" name="user[address]" placeholder="Address" />
  <input type="email" name="user[email]" placeholder="E-mail" />
  <input type="text" name="user[phone_number]" placeholder="Phone number" />
  <input type="submit" value="Submit">
</form>
