<form action="/auth/create" method="post">
  <input type="text" name="user[username]" placeholder="Username"/>
  <input type="password" name="user[password]" placeholder="Password" />
  <input type="password" name="user[Confirm_Password]" placeholder="Confirm Password" />
  <input type="email" name="user[email]" placeholder="E-mail" />
  <input type="text" name="user[phone_number]" placeholder="Phone number" />
</form>
<button onclick="myFunction()">Submit</button>
<p id="demo"></p>

<script>
  function myFunction() {
    document.getElementById("demo").innerHTML = "Account succesfully created"
  }

</script>
